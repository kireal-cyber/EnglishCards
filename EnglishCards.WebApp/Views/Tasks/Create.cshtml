@model EnglishCards.WebApp.Models.TaskItemViewModel

@{
    ViewData["Title"] = "Создать задачу";
}

<h1 class="h3 mb-3">Создать задачу</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="DueDate" class="form-label"></label>
            <input asp-for="DueDate" type="date" class="form-control" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select" asp-items="ViewBag.Statuses"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="DeckId" class="form-label"></label>
            <select asp-for="DeckId" class="form-select" asp-items="ViewBag.Decks">
                <option value="">(без темы)</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-lg me-1"></i>Сохранить
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
