@model List<EnglishCards.WebApp.Models.TaskItemViewModel>

@{
    ViewData["Title"] = "Задачи";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Задачи</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Добавить задачу
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Название</th>
            <th>Тема</th>
            <th>Назначено</th>
            <th>Дедлайн</th>
            <th>Статус</th>
            <th style="width: 140px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        var rowClass = item.IsOverdue ? "table-danger" : "";
        <tr class="@rowClass">
            <td>@item.Title</td>
            <td>@item.DeckName</td>
            <td>@item.AssignedUserName</td>
            <td>
                @if (item.DueDate.HasValue)
                {
                    @item.DueDate.Value.ToLocalTime().ToString("dd.MM.yyyy")
                }
            </td>
            <td>@item.Status</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
