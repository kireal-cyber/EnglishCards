<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnglishCards</title>

    
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
   
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon.png" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    
    
</head>
<body>
    @{
        var currentController = (ViewContext.RouteData.Values["controller"] as string) ?? "";
        var currentAction = (ViewContext.RouteData.Values["action"] as string) ?? "";

        var cardsActive = currentController == "WordCards" ? "active" : "";
        var decksActive = currentController == "Decks" ? "active" : "";
        var tasksActive = currentController == "Tasks" && currentAction == "Index" ? "active" : "";
        var assignedActive = currentController == "Tasks" && currentAction == "Assigned" ? "active" : "";
    }

    <header>
       
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                
                <a class="navbar-brand fw-semibold" asp-controller="WordCards" asp-action="Index">
                    <i class="bi bi-collection me-2"></i>EnglishCards
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                 
                    <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link @cardsActive"
                                asp-controller="WordCards" asp-action="Index">
                                    <i class="bi bi-card-text me-1"></i>Карточки
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @decksActive"
                                asp-controller="Decks" asp-action="Index">
                                    <i class="bi bi-folder2-open me-1"></i>Темы
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @tasksActive"
                                asp-controller="Tasks" asp-action="Index">
                                    <i class="bi bi-list-task me-1"></i>Задачи
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @assignedActive"
                                asp-controller="Tasks" asp-action="Assigned">
                                    <i class="bi bi-person-check me-1"></i>Назначенные
                                </a>
                            </li>
                        </ul>

                </div>
            </div>
        </nav>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top py-3 text-muted">
        <div class="container small d-flex justify-content-between">
            <span>© @DateTime.Now.Year — EnglishCards</span>
            <span>Phase 1 • MVC + WebApi + EF Core</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
